    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "scripts": {
    "lint:js": "eslint .",
